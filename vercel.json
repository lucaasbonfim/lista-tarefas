{
    "version": 2,
    "builds": [
        {
            "src": "server/src/**",
            "use": "@vercel/node"
        },
        {
            "src": "client/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        } 
    ]
}
